{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"],
            "@hooks/*": ["src/hooks/*"],
            "@component/*": ["src/component/*"],
            "@store/*": ["src/store/*"],
            "@constant": ["src/constant.ts"],
            "@util/*": ["src/util/*"],
            "@interface": ["src/interface.ts"],
            "@pages/*": ["src/pages/*"],
            "@layout/*": ["src/layout/*"]
        },
        "jsx": "react",
        "types": ["file-loader", "node"]
    },
    "include": ["src/**/*", "*", ".eslintrc.js"],
    "exclude": ["predicator", "out"]
}
